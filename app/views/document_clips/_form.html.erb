
<div class="dialog">
  <% semantic_form_for([@clip.parent, @clip]) do |form| %>
    <%= form.error_messages %>
    <% form.inputs do %>
      <%= form.input :content_type, :as => :hidden %>
      <%= form.input :body %>
    <% end %>
    <% form.buttons do %>
      <%= form.commit_button %>
    <% end %>
  <% end %>
</div>

