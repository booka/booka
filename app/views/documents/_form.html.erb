
<div id="page" class="editor">
  <h3><%= @document.new_record? ? 'Crear un artículo' : 'Editar artículo' %></h3>
  <%= content_tag(:h1, "Editando: #{h(@document.title)}") unless @document.new_record? %>
  <% semantic_form_for(@document) do |form| %>
    <%= form.error_messages %>
    <% form.inputs do %>
      <%= form.input :title %>
      <%= form.input :description %>
      <%= form.input :author %>
    <% end %>
    <% form.buttons do %>
      <%= form.commit_button %> <%= link_to 'Cancelar', '#', :class => 'cancel' %>
    <% end %>
  <% end %>
</div>