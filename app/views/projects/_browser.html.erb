

<ul class="browser projects">
  <h1>Investigaciones</h1>
  <% @projects.each do |project| %>
    <li class="project">
      <% if can? :manage, project %>
        <div class="floating_actions">
          <%= iminbutton_to t('.edit'), "pen_alt_stroke", edit_project_path(project) %>
        </div>
      <% end %>
      <%= link_to_ajax h(project.title), project_project_call_path(project) %>
      <p class="description"><%= h project.description %></p>
      <p class="stage"><%= h t("data.project.stage.#{project.stage}") %></p>
      <p class="collaborators"><%= project.permissions.size %> personas colaborando.</p>
    </li>
  <% end %>
</ul>
