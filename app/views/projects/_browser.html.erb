

<ul class="browser projects">
  <h1>Investigaciones</h1>
  <% @projects.each do |project| %>
    <% if can? :read, project %>
      <li class="project">
        <% if can? :manage, project %>
          <div class="floating_actions">
            <%= link_to_ajax "pen_alt_stroke", project_path(project) %>
          </div>
        <% end %>
        <%= link_to_ajax h(project.title), project_project_call_path(project) %>
        <p class="description"><%= h project.description %></p>
        <p class="property collaborators"><%= project.permissions.size %> personas colaborando.</p>
        <%= content_tag(:p, 'Visible sÃ³lo por colaboradores', :class => 'property visibility') if project.visibility == 'private' %>
      </li>
    <% end %>
  <% end %>
</ul>
