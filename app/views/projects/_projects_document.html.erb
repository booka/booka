<div id="page">
  <div class="head">
    <h1 class="title">Investigaciones</h1>
  </div>

  <div class="projects">
    <% @projects.each do |project| %>
      <% if can? :read, project %>
        <% div_for(project, :class => 'clip') do %>
          <h2><%= link_to_ajax h(project.title), project_project_call_path(project) %></h2>
          <p class="description"><%= h project.description %></p>
          <p class="property stage"><%= h t("data.project.stage.#{project.stage}") %></p>
          <p class="property collaborators"><%= project.permissions.size %> personas colaborando.</p>
          <%= content_tag(:p, 'Visible sÃ³lo por colaboradores', :class => 'property visibility') if project.visibility == 'private' %>
        <% end %>
      <% end %>
    <% end %>
  </div>

</div>