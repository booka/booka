<div id="page" class="doc">
  <% div_for(activity_report, :class => 'head') do  %>
    <h1 class="title"><%= h activity_report.title %></h1>
  <% end %>

  <div class="body">
    <div class="activities">
      <% activity_report.activities.each do |activity| %>
        <% div_for(activity, :class => "bloq #{activity.action}") do %>
          <%= activity.description %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>