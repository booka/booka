
<div id="page" class="editor">
  <h1>Estás editando el texto de presentación de '<%= @site.title %>'</h1>
  <% semantic_form_for(@site) do |form| %>
    <%= form.error_messages %>
    <% form.inputs do %>
      <%= form.input :content_type, :as => :hidden %>
      <%= form.input :body, :as => :text %>
    <% end %>
    <% form.buttons do %>
      <%= form.commit_button %>
      <%= link_to 'No cambiar', '#', :class => 'cancel' %>
    <% end %>
  <% end %>
</div>

