<ul id="site_navigation">
  <% if has_project? %>
    <%= navigate_to :entrance, project_project_call_path(@project) %>
    <%= navigate_to :archives, project_documents_path(@project)  %>
    <%= navigate_to :edition, project_documents_path(@project)  %>
    <%= navigate_to :booka, project_documents_path(@project)  %>
  <% else %>
    <%= navigate_to :entrance, root_path %>
  <% end %>
</ul>

<div id="messages">
  <div id="current_user">
    <% if current_user %>
      <%= link_to current_user.name, root_path %>
    <% else %>
      <%= link_to 'login', new_user_session_path(:url => request.path) %>
    <% end %>
  </div>

  <div id="current_project">
    <% if has_project? %>
      <%= current_project.title %>
    <% end %>
  </div>

  <div id="place">
    <%= yield :place  %>
  </div>
</div>

<ul id="user_navigation">
  <% if current_user %>
    <%= navigate_to :login, project_documents_path(@project)  %>
    <%= navigate_to :contact, project_documents_path(@project)  %>
    <%= navigate_to :calendar, project_documents_path(@project)  %>
  <% end %>
</ul>
